<h1>Listing posts</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Group</th>
    <th>Consultant</th>
    <th>Subject</th>
    <th>Level</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.account_id %></td>
    <td><%= post.group_id %></td>
    <td><%= post.consultant_id %></td>
    <td><%= post.subject_id %></td>
    <td><%= post.level_id %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

