<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @account.name %>
</p>

<p>
  <b>Email:</b>
  <%= @account.user.email %>
</p>

<p>
  <b>Group:</b>
	<% if not @account.group.nil? %>
  	<%= @account.group.name %>
	<% else %>
		<b>none</b>
	<% end %>		
</p>

